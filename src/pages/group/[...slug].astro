---
import { type CollectionEntry, getCollection, render } from "astro:content";
import PersonLayout from "../../layouts/PersonLayout.astro";

export async function getStaticPaths() {
	const group = await getCollection("group");
	return group.map((person) => ({
		params: { slug: person.id },
		props: person,
	}));
}
type Props = CollectionEntry<"group">;

const person = Astro.props;
const { Content } = await render(person);
---

<PersonLayout slug={person.id} {...person.data}>
	<Content />
</PersonLayout>
