---
import Layout from "../layouts/Layout.astro";

import PublicationsList from "../components/PublicationsList.astro";
---

<Layout>
    <section>
        <h1>Featured Publications</h1>
        <p>A list of some of our publications.</p>

        <div>
            <a href="/publications#2025">2025</a> |
            <a href="/publications#2024">2024</a> |
            <a href="/publications#2023">2023</a> |
            <a href="/publications#2022">2022</a> |
            <a href="/publications#2021">2021</a>
        </div>
    </section>

    <section class="year-section">
        <h2 id="2025">2025</h2>
        <PublicationsList year={2025} />
    </section>

    <section class="year-section">
        <h2 id="2024">2024</h2>
        <PublicationsList year={2024} />
    </section>
</Layout>

<style>
    section {
        --content-max-width: 1050px;
    }
    .year-section {
        margin-block-start: 3rem;
        --content-max-width: 900px;
    }

    h1 {
        font-size: 3rem;
    }
    h2 {
        display: flex;
        align-items: baseline;
        gap: 0.75ch;

        font-family: var(--ff-body);
        font-weight: 600;
        font-size: 1.5rem;
        text-transform: uppercase;
        margin-block-end: 1lh;

        &::after {
            content: "";
            display: block;
            height: 2px;
            flex: 1;
            background: currentColor;
        }
    }

    p {
        margin-block-end: 0.5lh;
    }

</style>
