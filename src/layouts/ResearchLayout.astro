---
import type { CollectionEntry } from "astro:content";
import Layout from "./Layout.astro";

type Props = CollectionEntry<"research">["data"];

const { title, summary } = Astro.props;
---

<Layout>
  <section class="hero-section">
    <div class="hero">
        <h1>{title}</h1>
    </div>
  </section>

  <section class="main-section">
      <div class="md">
        <!-- <p class="summary">
            {summary}
        </p> -->
        <slot />
    </div>
  </section>

</Layout>

<style>
    .hero-section {
        grid-column: full-width;
        background: var(--clr-bg-dark);
        padding-block: calc(var(--page-padding) * 1.5);
    }
    .hero {
        display: grid;

        & h1 {
            font-size: clamp(2rem, 4vw, 3.25rem);
            line-height: 1.3;
            font-weight: 600;
            max-width: 30ch;
        }
    }

    .main-section {
        display: grid;
        padding-block: 3rem;
    }

    .md {
        max-width: 70ch;
    }
    .summary {
        font-size: 1.125rem;
        font-weight: 600;
    }

</style>
